<%= render 'shared/errors', obj: @user %>
<div class="ui placeholder segment">
  <div class="column">
    <%= form_with(model: @user, html: {class: "ui form", role: "form"}, local: true) do |f| %>  
      <div class="field">
        <%= f.label :username %>
        <div class="ui left icon input">
          <%= f.text_field :username, placeholder: "Enter your username" %>
          <i class="user icon"></i>
        </div>
      </div>
      <div class="field">
        <%= f.label :email %>
        <div class="ui left icon input">
          <%= f.email_field :email, placeholder: "Enter your email address" %>
          <i class="user icon"></i>
        </div>
      </div>
      <div class="field">
        <%= f.label :password %>
        <div class="ui left icon input">
          <%= f.password_field :password, class:"form-control", placeholder: "Enter your password" %>
          <i class="lock icon"></i>
        </div>
      </div>
      <br/>
      <div class="ui three column grid center aligned">
        <div class="two wide column">
          <%= f.submit ( f.object.new_record? ? "Sign up" : "Update"), class:"ui blue submit button max-width-6"%> 
        </div>
        <% if logged_in? %>
          <div class="two wide column">
              <%= link_to "Delete", user_path(@user), data: {turbo_method: :delete, turbo_confirm: "Are you sure you want to delete the account?"}, class: "ui red submit button max-width-6", id: "cancel" %>
          </div>
          <div class="two wide column">
              <%= link_to "Cancel", root_path, class: "ui grey submit button max-width-6", id: "cancel" %>
          </div>  
        <% end %>      
      </div>       
    <% end %>      
  </div>   
</div>