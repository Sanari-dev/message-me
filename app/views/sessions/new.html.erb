<div class="ui center aligned column grid" style="margin-top:2.5em;">
  <div class="row">
    <h1>Welcome to MessageMe - <em>a complete Chat app</em></h1>
  </div>
  <h2 class="ui center aligned medium icon header" style="margin-bottom:2.5em;">
    <i class="circular icon">
      <div class="ui middle aligned tiny image">
        <img src="/images/logo-192.png" style="width: 3.5em; margin-bottom: 1em;">
      </div>
    </i>  
    Login to continue
  </h2>  
</div>

<div class="ui placeholder segment">
  <div class="ui two column very relaxed stackable grid">
    <div class="column">
      <%= form_with(scope: :session, html: {class: "ui form", role: "form"}, url: login_path, local: true) do |f| %>  
        <div class="field">
          <%= f.label :username %>
          <div class="ui left icon input">
            <%= f.text_field :username, placeholder: "Enter your username" %>
            <i class="user icon"></i>
          </div>
        </div>
        <div class="field">
          <%= f.label :password %>
          <div class="ui left icon input">
            <%= f.password_field :password, class:"form-control", placeholder: "Enter your password" %>
            <i class="lock icon"></i>
          </div>
        </div>
        <%= f.submit "Login", class:"ui blue submit button"%> 
      <% end %>      
    </div>
    <div class="middle aligned column">
      <%= link_to signup_path, class: "ui big blue button" do %>
        <i class="signup icon"></i>Sign Up
      <% end %>   
    </div>
  </div>
  <div class="ui vertical divider">
    Or
  </div>
</div>